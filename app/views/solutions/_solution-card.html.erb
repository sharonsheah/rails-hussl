<% if solution.problem.category === tag || tag == "rerender" %>
    <div id=<%= "problem_#{solution.id}" %> >

        <%= link_to solution_path(solution) do %>
            <div class="problem-card light-blue solution-card ">
                <div class="card-title">
                    <h5 class="p-0"><%= solution.title %></h5>
                    <div class="time-ago">
                        <p><%= local_time_ago(solution.created_at) %></p>
                    </div>
                </div>
                <div class="mx-0 solving-tag">
                        <p><%= solution.problem.title.upcase %></p>
                    </div>
                <div class="card-text">
                <p><%=h truncate(solution.description, :length => 150) %></p>
                </div>
                <div class="card-actions">
                    <div class="author">
                        <% if solution.user.photo.attached? %>
                            <p><span><%= cl_image_tag solution.user.photo.key, height: 24, width: 24, crop: :fill, gravity: :face %> <%= solution.user.first_name %> <%= solution.user.last_name.first %></span></p>
                        <% else %>
                            <p><span><img class="small-avatar" src="https://res.cloudinary.com/docykmjwf/image/upload/v1600394322/default_profile_pic_cqfzoi.png" alt="user-avatar" style="crop:fill"> <%= solution.user.first_name %> <%= solution.user.last_name.first %></span></p>
                        <% end %>
                    </div>
                    <div class="votes">
                        <% if Vote.where(votable: solution, user:  current_user).empty? && star != false %>
                            <%= link_to upvote_solution_path(solution), method: :post, remote: true,  class: 'button'  do %>
                                <i class="far fa-thumbs-up"></i>
                            <% end %>
                        <% else %>
                            <i class="fas fa-thumbs-up"></i>
                        <% end %>
                            <!-- comment button? -->
                        <p><%= solution.votes.count %></p>   
                    </div>
                    <div class="collaborators">
                        <% if solution.collaborators.include?(current_user) %>
                            <i class="fas fa-hand-paper"></i>
                        <% else %>
                            <%= link_to collaborate_solution_path(solution), method: :post, class: 'button'  do %>
                                <i class="far fa-hand-paper"></i>
                            <% end %>
                        <% end %>
                        <p><%= solution.collaborators.count %></p>
                    </div>
                </div>
            </div>
        <% end %>

    </div>
<% end %>