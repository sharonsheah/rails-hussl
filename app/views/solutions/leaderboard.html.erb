<div class="container">
	<h2>Leaderboard</h2>

	<%= render "shared/leaderboard-tabs" %>

	<% @votes.first(10).each do |vote| %>
		<% solution = Solution.find(vote.first) %>
		<%= link_to solution_path(solution) do %>
			<div>
				<p><%= solution.title %> Votes: <%= vote.last %></p>
			</div>
		<% end %>
	<% end %>
</div>