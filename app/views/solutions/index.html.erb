<h1>Ideate</h1>

<ul class="nav">
  <li class="nav-item">
    <h2><%= link_to 'Problems', problems_path, class: 'nav-link' %></h2>
  </li>
  <li class="nav-item">
    <h2><%= link_to 'Solutions', solutions_path, class: 'nav-link active' %></h2>
  </li>
  <%# <li class="nav-item">
  <h2><%= link_to 'Pitches', pitches_path, class: 'nav-link' %></h2>
