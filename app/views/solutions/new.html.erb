<div class="btn-back">
  <%= link_to "Back", @back_url %>
</div>

<h3>Submit a solution</h3>
<p>You are submitting a pitch for...</p>
<h3><%= @problem.title %></h3>

<%# insert solution card here %>
<div>
  <p>Description</p>
  <p><%= @problem.description %></p>
</div>

<div>
  <p>POSTED BY</p>
  <p><%= @problem.user.first_name %> <%= @problem.user.last_name %></p>
</div>

<%# insert votes icon %>
<div>
  Votes: <%= @problem.votes.count %>
</div>
<br>
<div>
  <%= simple_form_for [ @problem, @solution ] do |f| %>
    <%= f.input :title %>
    <%= f.input :description %>
    <%= f.submit %>
  <% end %>
</div>

