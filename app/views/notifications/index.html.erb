<div class="container">
  <div class="first-line">
    <h3 class="name mx-2"><%= @user.first_name %> <%= @user.last_name %></h3>
    <div id="main">
      <button class="openbtn btn btn-info">&#9776;</button>
    </div>
    <div id="mySidebar" class="sidebar">
      <a href="javascript:void(0)" class="closebtn">&times;</a>
      <%= link_to 'Edit profile', edit_user_registration_path(current_user)  %>
      <%= link_to 'About hussl', root_path  %>
      <%= link_to 'Logout', destroy_user_session_path, method: :delete  %>
    </div>
  </div>

  <div class="px-3">
    <ul class="nav">
      <li class="nav-item">
        <h4><%= link_to 'Summary', user_profiles_path, class: 'nav-link tabs' %></h4>
      </li>
      <li class="nav-item">
        <h4><%= link_to 'Notifications', user_notifications_path, class: 'nav-link tab-active tabs' %></h4>
      </li>
    </ul>

</div>
