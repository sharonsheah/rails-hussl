<div class="container">
  <div class="btn-back">
    <%= link_to "Back", @back_url %>
  </div>

  <div>
    <h2><%= @pitch.title %></h2>
  </div>

  <div class="pitch-card">
    <div>
     <%= render "shared/pitch-tags" %>
    </div>
    
    <h5>Solving</h5>
    <p><%= @pitch.solution.problem.title %></p>
    <h5>Description</h5>
    <p><%= @pitch.description %></p>
    <h6>POSTED BY</h6>
    <div>
      <% if @pitch.user.photo.attached? %>
        <p><span><%= cl_image_tag @pitch.user.photo.key, height: 24, width: 24, crop: :fill, gravity: :face %> <%= @pitch.user.first_name %> <%= @pitch.user.last_name %></span></p>
        <% else %>
          <p><span><img src="https://res.cloudinary.com/docykmjwf/image/upload/c_scale,h_24/v1600307295/default_profile_pic_ypyuhz.png" alt="user-avatar" style="crop:fill"> <%= @pitch.user.first_name %> <%= @pitch.user.last_name %></span></p>
      <% end %>
    </div> 
    <div>
      <p><span>
        <div class="actions">
        <% if Vote.where(votable: @pitch, user:  current_user).empty? %>
          <%= link_to upvote_pitch_path(@pitch, @pitch.solution), method: :post, class: 'button'  do %>
            <i class="far fa-thumbs-up"></i>
          <% end %>
        <% else %>
          <i class="fas fa-thumbs-up"></i>
        <% end %>
        <span><%= @pitch.votes.count %></span>
      </div>
      </p></span>
    </div>
    <div>
      <p><%= local_time_ago(@pitch.created_at) %></p>
    </div>
  </div>
</div>

<div class="container pitch-link">
  <iframe src="<%= @pitch.link %>" style="border:0px #ffffff none;" name="myiFrame" scrolling="no" frameborder="1" marginheight="0px" marginwidth="0px" height="275px" width="375px" allowfullscreen></iframe>
  <a href="<%= @pitch.link %>" alt="original-link">View Pitch Here</a>
</div>
