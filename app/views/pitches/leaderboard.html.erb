<div class="ideate-page">
  <div class="header">
    <div class="btn-profile">
      <div class="text-right mt-2" style="font-size:8vw">
        <%= link_to user_profiles_path(current_user) do %>
          <% if current_user.photo.attached? %>
            <span class="card-img-top"><%= cl_image_tag current_user.photo.key, height: 42, width: 42, crop: :fill, gravity: :face %></span>
          <% else %>
            <i class="far fa-user-circle"></i>
          <% end %>
        <% end %>
      </div>
    </div>
	
		<h2>Leaderboard</h2>
	
		<ul class="nav">
			<li class="nav-item">
				<h4><%= link_to 'Problems', leaderboard_problems_path, class: 'nav-link tabs' %></h4>
			</li>
			<li class="nav-item">
				<h4><%= link_to 'Solutions', leaderboard_solutions_path, class: 'nav-link tabs' %></h4>
			</li>
			<li class="nav-item">
				<h4><%= link_to 'Pitches', leaderboard_pitches_path, class: 'nav-link tab-active tabs' %></h4>
			</li>
		</ul>
	</div>

	<div class="ideate-content-container leaderboard-content-container pad-left">
		<ol class="ranking-list">
			<% @votes.first(10).each do |vote| %>
				<% pitch = Pitch.find(vote.first) %>
				<li>
					<%= link_to pitch_path(pitch) do %>
						<div class="ranking-item">
							<p class="px-2"><%= pitch.title %></p>
							<p class="d-inline-flex"><i class="far fa-thumbs-up pr-1"></i><%= pitch.votes.count %></p>						</div>
					<% end %>
				</li>
			<% end %>
		</ol>	
	</div>
</div>