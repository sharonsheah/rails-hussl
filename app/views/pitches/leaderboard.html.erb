<div class="container">
	<h2>Leaderboard</h2>

	<%= render "shared/leaderboard-tabs" %>

	<% @votes.first(10).each do |vote| %>
		<% pitch = Pitch.find(vote.first) %>
		<%= link_to pitch_path(pitch) do %>
			<div>
				<p><%= pitch.title %> Votes: <%= vote.last %></p>
			</div>
		<% end %>
	<% end %>
</div>